
@using SICOAdmin1._0.Models.User
@{
    User UserLog = (User)Session["User"];
    string userNameLog = " ";

    if (UserLog != null)
    {
        userNameLog = UserLog.name;
    }

    List<int?> lstActions = (List<int?>)Session["lstActions"];
    if (lstActions == null)
    {
