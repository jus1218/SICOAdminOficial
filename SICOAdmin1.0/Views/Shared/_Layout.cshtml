                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /BARRA NAVEGACION SUPERIOR -->
            <!--CONTENIDO RENDERIZADO-->
            <div class="right_col" role="main">

                @RenderBody()
            </div>
            <!--/CONTENIDO RENDERIZADO-->
